<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- arimart.kasir inherit tree view -->
    <record id="arimart_kasir_view_tree_inherit" model="ir.ui.view">
        <field name="name">Daftar Kasir</field>
        <field name="model">arimart.kasir</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="arimart_person_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="id_kasir"/>
            </xpath>
        </field>
    </record>

    <!-- arimart.kasir inherit form view -->
    <record id="arimart_kasir_view_form_inherit" model="ir.ui.view">
        <field name="name">Form Kasir</field>
        <field name="model">arimart.kasir</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="arimart_person_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet//group[2]" position="after">
                <group name="id" string="ID">
                    <field name="id_kasir"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- arimart.kasir action window -->
    <record id="arimart_kasir_action" model="ir.actions.act_window">
        <field name="name">Kasir</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">arimart.kasir</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="arimart_kasir_menu_act" 
              name="kasir" 
              parent="arimart_pegawai_menu_categ" 
              action="arimart_kasir_action"
              sequence="10"/>

</odoo>
